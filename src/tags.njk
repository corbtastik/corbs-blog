---
title: "Tags"
layout: base.njk
description: "Browse posts by topic."
---

<h1>Tags</h1>

<!-- 1. Tag Cloud / Navigation -->
<div class="tag-list">
{% for tag, posts in collections %}
  {% if tag != "all" and tag != "posts" %}
    <a href="#{{ tag }}" class="tag">
        #{{ tag }} <span>{{ posts.length }}</span>
    </a>
  {% endif %}
{% endfor %}
</div>

<hr>

<!-- 2. The Sections -->
{% for tag, posts in collections %}
  {% if tag != "all" and tag != "posts" %}
    
    <section id="{{ tag }}">
      <!-- Header -->
      <h2>#{{ tag }}</h2>

      <!-- Replaced custom HTML with the standard component -->
      <ul class="post-list">
        {% for post in posts | reverse %}
          
          {# Pass hide_tags to keep the list clean, since we are already inside a specific tag section #}
          {% set hide_tags = true %}
          {% include "components/post-item.njk" %}
        
        {% endfor %}
      </ul>
    </section>

  {% endif %}
{% endfor %}
