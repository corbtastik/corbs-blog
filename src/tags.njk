---
title: "Tags"
layout: base.njk
description: "Browse posts by topic."
---

<h1>Topics</h1>

<!-- 1. List of all tags at the top for quick navigation -->
<!-- Added 'tag-list' class (optional) and removed inline styles from links -->
<div class="tag-list" style="margin-bottom: 40px;">
{% for tag, posts in collections %}
  {% if tag != "all" and tag != "posts" %}
    <a href="#{{ tag }}" class="tag">
        #{{ tag }} <span style="opacity: 0.8; font-size: 0.85em; margin-left: 4px;">{{ posts.length }}</span>
    </a>
  {% endif %}
{% endfor %}
</div>

<hr>

<!-- 2. The Sections -->
{% for tag, posts in collections %}
  {% if tag != "all" and tag != "posts" %}
    
    <section id="{{ tag }}" style="margin-bottom: 60px;">
      <!-- Updated Header to match theme colors better -->
      <h2>
        #{{ tag }}
      </h2>

      <ul class="simple-list">
        {% for post in posts | reverse %}
          <li class="simple-item">
            <div class="simple-header">
                <h3 style="margin: 0;">
                    <a href="{{ post.url }}">{{ post.data.title }}</a>
                </h3>
                <span class="simple-date">{{ post.date.toISOString().slice(0, 10) }}</span>
            </div>
          </li>
        {% endfor %}
      </ul>
    </section>

  {% endif %}
{% endfor %}