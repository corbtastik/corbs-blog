---
layout: base.njk
title: Home
pagination:
  data: collections.posts
  size: 10
  alias: posts
---

<h1>Latest Terminal Entries</h1>

<ul class="post-list">
{% for post in posts %}
  <li class="post-item">
    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <p>{{ post.data.description }}</p>
    <small>Tags: {{ post.data.tags }}</small>
  </li>
{% endfor %}
</ul>

<!-- Pagination Controls -->
<div class="pagination">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}">← Newer Code</a>
  {% else %}
    <span></span>
  {% endif %}
  
  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}">Older Code →</a>
  {% endif %}
</div>